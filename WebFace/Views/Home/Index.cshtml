@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <title>UPOL WebFace</title>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropit/0.5.1/jquery.cropit.min.js"></script>

    <style>
        .cropit-preview {
            background-color: #f8f8f8;
            background-size: cover;
            border: 1px solid #ccc;
            border-radius: 3px;
            margin-top: 7px;
            width: 250px;
            height: 300px;
        }

        .cropit-preview-image-container {
            cursor: move;
        }
        /*
         * If the slider or anything else is covered by the background image,
         * use relative or absolute position on it
        */

        .image-size-label {
            margin-top: 10px;
        }

        input {
            display: block;
        }

        button[type="submit"] {
            margin-top: 10px;
        }

        #result {
            margin-top: 10px;
            width: 900px;
        }

        #result-data {
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="image-editor">
        @*@using (Html.BeginForm("UploadAndProcess", "Home", FormMethod.Post,
            new { name = "myForm", enctype = "multipart/form-data" }))
        {*@
        <form id="login-form">
            <input type="file" name="image" class="cropit-image-input" />
            <div class="cropit-preview"></div>
            <div class="image-size-label">
                Resize image
            </div>
            <input type="range" class="cropit-image-zoom-input" />
            <input type="hidden" name="image-data" class="hidden-image-data" />
        </form> 

        <button type="button" id="submitForm" onclick="onSubmitClick()">Submit</button>
        @*}*@
    </div>

    <div id="result">
        <code id="result-data"></code>
    </div>

    <script>

        // do it via fetch request

        $('.image-editor').cropit({
            maxZoom: 2.0
        });

        function onSubmitClick() {
            var image = $('.image-editor').cropit('export',
                {
                    type: 'image/jpeg',
                    quality: 1.0
                });

            var fileName = $('input[type=file]').val().replace(/C:\\fakepath\\/i, '')


            console.log(fileName);

            $.post("@Url.Action("UploadAndProcessImage", "home")",
                { image: image, fileName: fileName });
        }
    </script>
</body>
</html>